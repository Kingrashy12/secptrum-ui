{
  "compilerOptions": {
    "target": "ES6", // Target ECMAScript 6, a widely supported version
    "module": "ESNext", // Output ES modules, useful for modern bundlers
    "moduleResolution": "Node", // Use Node-style resolution for modules
    "lib": ["dom", "esnext"], // Include the DOM and latest ECMAScript libraries
    "jsx": "react-jsx", // Use the new JSX transform from React 17+
    "declaration": true, // Generate TypeScript declaration files (.d.ts)
    "declarationMap": true, // Generates .d.ts.map files alongside declarations
    "outDir": "dist", // Output directory for compiled files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "baseUrl": ".", // Base directory to resolve non-relative module names
    "rootDir": "./src", //Switch to ./src when is time for build
    "resolveJsonModule": true, // Allows importing .json files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist/**/*"] // Exclude unnecessary directories from compilation
}
